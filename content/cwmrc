# C-conrol M-alt M1-button1
borderwidth             2

bind-key CM-r           reload
bind-key CMS-q          quit
bind-key MS-c           close
bind-key M-1            group-only-1
bind-key M-2            group-only-2
bind-key M-3            group-only-3
bind-key MS-1           window-movetogroup-1
bind-key MS-2           window-movetogroup-2
bind-key MS-3           window-movetogroup-3
bind-key M-j            window-cycle
bind-key M-k            window-cycle
bind-key M-t            window-maximize
bind-key M-v            window-vtile
bind-key M-Return       '/usr/local/bin/st -e tmux'
bind-key M-w            '/usr/X11R6/bin/xterm -e w3m ddg.gg/lite'
bind-key M-d            exec

bind-key M-b            "xbacklight -dec 10 -time 0"
bind-key MS-b           "xbacklight -inc 10 -time 0"
bind-key M-s            "scrot"

color activeborder      "#50FA7B"
color inactiveborder    "#21222C"
color menubg            "#a8ff60"
color menufg            "#000"

command qutebrowser     qutebrowser 

snapdist                20
sticky                  yes
